<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_margin="2dp"
    android:background="@drawable/item"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp">
        <ImageView
            android:id="@+id/list_item_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/list_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_item_image_view"
            android:layout_toEndOf="@id/list_item_image_view"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/light"
            android:padding="4dp"
            tools:text="Note Title"
            android:background="@drawable/rounded"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/list_item_text_letter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/dark"
        android:fontFamily="monospace"
        android:padding="6dp"
        android:background="@drawable/rounded_transparent" />
</RelativeLayout>
